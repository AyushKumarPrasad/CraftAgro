<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#006400"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Home"
    tools:showIn="@layout/app_bar_home">

    <LinearLayout
        android:id="@+id/textviewmoving"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/marqueText"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center|start"
            android:textStyle="bold"
            android:singleLine="true"
            android:maxLines="2"
            android:text="@string/quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="EllipsizeMaxLines" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager1"
        android:layout_below="@+id/textviewmoving"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
    </android.support.v4.view.ViewPager>
    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/magicbuttonorder"
        android:layout_below="@+id/viewpager1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:magic_button_size="70dp"
        app:hide_text_size="6sp"
        app:button_icon="@drawable/god"
        app:button_icon_height="65dp"
        app:button_icon_width="50dp"
        app:hide_text="Place Order"
        app:icon_button_color="#767070"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        app:expandable_area_color="#E05687">
    </br.com.bloder.magic.view.MagicButton>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_whatsapp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/viewpager1"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="250dp"
        android:elevation="26dp"
        android:src="@drawable/whatsapp"
        android:visibility="invisible"
        app:backgroundTint="#421B2E"
        app:pressedTranslationZ="12dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_location"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/viewpager1"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="190dp"
        android:elevation="26dp"
        android:src="@drawable/location"
        android:visibility="invisible"
        app:backgroundTint="#005073"
        app:pressedTranslationZ="12dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_fb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/viewpager1"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="130dp"
        android:elevation="26dp"
        android:src="@drawable/phone"
        android:visibility="invisible"
        app:backgroundTint="#A61D39"
        app:pressedTranslationZ="12dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_twitter"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/viewpager1"
        android:layout_gravity="bottom|end"
        android:elevation="26dp"
        android:src="@drawable/email"
        android:visibility="invisible"
        app:backgroundTint="#FF964A"
        app:pressedTranslationZ="12dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_plus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/viewpager1"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:elevation="26dp"
        android:src="@drawable/plus"
        app:backgroundTint="#E05687"
        app:pressedTranslationZ="12dp" />
</RelativeLayout>