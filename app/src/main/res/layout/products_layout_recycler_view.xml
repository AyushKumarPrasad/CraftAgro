<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relateshowshotcancel"
    android:background="#006400"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools">
        <android.support.v7.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/card_view2kali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#708238"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="5dp"
            card_view:cardUseCompatPadding="true"
            card_view:card_Elevation="35dp">
        <RelativeLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:id="@+id/imageofproducts"
                    android:layout_width="100dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_height="110dp" />
                        <LinearLayout
                            android:layout_marginLeft="130dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/products_name_list"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"
                                    android:layout_marginRight="2dp"
                                    android:textAlignment="textEnd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Date Of Birth" />
                                <TextView
                                    android:id="@+id/product_description_list"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"
                                    android:layout_marginRight="2dp"
                                    android:textAlignment="textEnd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="name"  />
                        </LinearLayout>
        </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>